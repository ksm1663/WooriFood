<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


    <com.google.android.material.button.MaterialButton
        style="@style/Widget.WooriFood.Button"
        android:id="@+id/btn_upload"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="10dp"
        android:text="등록" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="20dp">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="맛*"
                android:textSize="20dp"
                android:layout_gravity="center_vertical" />

        <RatingBar
            android:id="@+id/ratingTaste"
            android:isIndicator="false"
            style="@style/Widget.AppCompat.RatingBar.Indicator"
            android:theme="@style/RatingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:numStars="5" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="가격*"
                android:textSize="20dp"
                android:layout_gravity="center_vertical" />

            <RadioGroup
                android:id="@+id/radioPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <RadioButton
                    android:button="@null"
                    android:background="@drawable/custom_radiobutton"
                    android:textColor="@drawable/custom_radiotext"
                    android:textAlignment="center"
                    android:id="@+id/radioPriceCheap"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="쌈"
                    android:fontFamily="@font/nanumsquareround"
                    android:textSize="15dp"/>
                <RadioButton
                    android:button="@null"
                    android:background="@drawable/custom_radiobutton"
                    android:textColor="@drawable/custom_radiotext"
                    android:textAlignment="center"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/radioPriceNormal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="보통"
                    android:textSize="15dp"
                    android:fontFamily="@font/nanumsquareround"/>
                <RadioButton
                    android:button="@null"
                    android:background="@drawable/custom_radiobutton"
                    android:textColor="@drawable/custom_radiotext"
                    android:textAlignment="center"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/radioPriceExpensive"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="비쌈"
                    android:textSize="15dp"
                    android:fontFamily="@font/nanumsquareround"/>
            </RadioGroup>

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="고급짐*"
                android:textSize="20dp"
                android:layout_gravity="center_vertical" />

            <RadioGroup
                android:id="@+id/radioLuxury"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <RadioButton
                    android:button="@null"
                    android:background="@drawable/custom_radiobutton"
                    android:textColor="@drawable/custom_radiotext"
                    android:textAlignment="center"
                    android:id="@+id/radioLuxuryBad"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="없음"
                    android:fontFamily="@font/nanumsquareround"
                    android:textSize="15dp"/>
                <RadioButton
                    android:button="@null"
                    android:background="@drawable/custom_radiobutton"
                    android:textColor="@drawable/custom_radiotext"
                    android:textAlignment="center"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/radioLuxuryNormal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="무난"
                    android:textSize="15dp"
                    android:fontFamily="@font/nanumsquareround"/>
                <RadioButton
                    android:button="@null"
                    android:background="@drawable/custom_radiobutton"
                    android:textColor="@drawable/custom_radiotext"
                    android:textAlignment="center"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/radioLuxuryGood"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="고급"
                    android:textSize="15dp"
                    android:fontFamily="@font/nanumsquareround"/>
            </RadioGroup>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="방문시간*"
                android:textSize="20dp"
                android:layout_gravity="center_vertical" />

            <RadioGroup
                android:id="@+id/radioVisit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <RadioButton
                    android:button="@null"
                    android:background="@drawable/custom_radiobutton"
                    android:textColor="@drawable/custom_radiotext"
                    android:textAlignment="center"
                    android:id="@+id/radioVisitFirst"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1차"
                    android:fontFamily="@font/nanumsquareround"
                    android:textSize="15dp"/>
                <RadioButton
                    android:button="@null"
                    android:background="@drawable/custom_radiobutton"
                    android:textColor="@drawable/custom_radiotext"
                    android:textAlignment="center"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/radioVisitSecond"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2차"
                    android:textSize="15dp"
                    android:fontFamily="@font/nanumsquareround"/>
                <RadioButton
                    android:button="@null"
                    android:background="@drawable/custom_radiobutton"
                    android:textColor="@drawable/custom_radiotext"
                    android:textAlignment="center"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/radioVisitThird"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3차"
                    android:textSize="15dp"
                    android:fontFamily="@font/nanumsquareround"/>
            </RadioGroup>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="혼잡도*"
                android:textSize="20dp"
                android:layout_gravity="center_vertical" />

            <RadioGroup
                android:id="@+id/radioComplex"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <RadioButton
                    android:button="@null"
                    android:background="@drawable/custom_radiobutton"
                    android:textColor="@drawable/custom_radiotext"
                    android:textAlignment="center"
                    android:id="@+id/radioComplexCozy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="여유"
                    android:fontFamily="@font/nanumsquareround"
                    android:textSize="15dp"/>
                <RadioButton
                    android:button="@null"
                    android:background="@drawable/custom_radiobutton"
                    android:textColor="@drawable/custom_radiotext"
                    android:textAlignment="center"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/radioComplexNormal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="무난"
                    android:textSize="15dp"
                    android:fontFamily="@font/nanumsquareround"/>
                <RadioButton
                    android:button="@null"
                    android:background="@drawable/custom_radiobutton"
                    android:textColor="@drawable/custom_radiotext"
                    android:textAlignment="center"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/radioComplexBuzy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="복잡"
                    android:textSize="15dp"
                    android:fontFamily="@font/nanumsquareround"/>
            </RadioGroup>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="코멘트"
                android:textSize="20dp"
                android:layout_gravity="center_vertical" />

            <EditText
                android:id="@+id/editComment"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@drawable/layout_radius_blue"
                android:hint="후기를 작성해주세요."
                android:gravity="top"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:padding="5dp"
                />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:padding="5dp"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">

        <ImageView
            android:id="@+id/imageUploadBtn"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/ic_camera"
            android:clickable="true"
            android:layout_marginRight="2dp"
            android:layout_gravity="center_vertical"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/imageListView"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>
    </LinearLayout>
</RelativeLayout>