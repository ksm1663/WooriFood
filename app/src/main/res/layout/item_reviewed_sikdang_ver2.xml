<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="130dp"
    android:orientation="horizontal"
    android:clickable="true"
    android:focusable="true"
    android:background="?android:attr/selectableItemBackground">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"/>

    <RelativeLayout
        android:id="@+id/relateMain"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="10dp"
        android:paddingTop="10dp">

        <LinearLayout
            android:id="@+id/lay_info"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/item_place_name"
                android:text="식당명"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/item_road_address_name"
                android:text="주소"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/item_place_name"
                android:layout_marginTop="3dp"
                android:textColor="#727272"
                android:textSize="15dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:text="리뷰 수 "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/dark_blue"
                    android:textSize="15dp"
                    android:layout_marginRight="10dp"/>
                <TextView
                    android:id="@+id/item_reviewCnt"
                    android:text="갯수"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/dark_blue"
                    android:textSize="15dp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/lay_info"
            android:orientation="vertical"
            android:gravity="center">
            <ImageView
                android:src="@drawable/ic_distance"
                android:layout_width="45dp"
                android:layout_height="45dp" />
            <TextView
                android:id="@+id/item_distance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="거리"
                android:textSize="15dp"
                android:layout_marginTop="3dp"
                android:layout_gravity="center"/>
        </LinearLayout>



        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/lay_info">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="9dp">
                <TextView
                    android:text="맛"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/deep_blue"
                    android:textSize="15dp"
                    android:layout_marginRight="3dp"/>
                <TextView
                    android:id="@+id/item_avgTaste"
                    android:text="점수"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/deep_blue"
                    android:visibility="gone"
                    android:textSize="15dp" />
                <RatingBar
                    android:id="@+id/item_avgTasteBar"
                    style="@style/Widget.AppCompat.RatingBar.Small"
                    android:theme="@style/RatingBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="3dp"/>
            </LinearLayout>



            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="9dp">
                <TextView
                    android:text="가격대"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/deep_blue"
                    android:textSize="15dp"
                    android:layout_marginRight="3dp"/>

                <SeekBar
                    android:clickable="true"
                    android:focusable="true"
                    android:id="@+id/seekPrice_"
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:max="30"
                    android:progressDrawable="@drawable/valuebar_progress"
                    android:thumb="@drawable/valuebar_thumb"
                    android:layout_marginTop="2dp"
                    android:layout_marginLeft="-10dp"
                    android:layout_gravity="center_vertical"/>
            </LinearLayout>





            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:text="고급짐"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/deep_blue"
                    android:textSize="15dp"
                    android:layout_marginRight="3dp"/>

                <SeekBar
                    android:id="@+id/seekLuxury_"
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:max="30"
                    android:progressDrawable="@drawable/valuebar_progress"
                    android:thumb="@drawable/valuebar_thumb"
                    android:layout_marginTop="2dp"
                    android:layout_marginLeft="-10dp"
                    android:layout_gravity="center_vertical"/>
            </LinearLayout>




        </LinearLayout>

    </RelativeLayout>

</LinearLayout>